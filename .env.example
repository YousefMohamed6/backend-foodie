# Server Configuration
PORT=3000
NODE_ENV=development # Set to 'production' on the server

# Database Configuration (PostgreSQL + PostGIS)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=foodie_db
# Prisma Connection String
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/foodie_db?schema=public"

# Security & Authentication
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_REFRESH_EXPIRATION=7d
SECURE_API_KEY=your_hardened_native_api_key_here
# CORS Configuration (Comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200,https://your-mobile-domain.com

# Redis Configuration (For Caching & Queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Google Maps API (Used for distance calculations)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Social Login (Native integration)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

APPLE_CLIENT_ID=your.apple.bundle.id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIEv...your...key\n-----END PRIVATE KEY-----"

# Notification & Email Services
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key

TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Firebase Admin (For Push Notifications ONLY)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_SERVICE_ACCOUNT='{"type":"service_account","project_id":"..."}'

# Fawaterak Payment Gateway
APP_ENV=local
APP_BASE_URL=http://localhost:3000
FAWATERAK_ENV=testing
FAWATERAK_API_KEY=your-fawaterak-api-key
FAWATERAK_VENDOR_KEY=your-fawaterak-vendor-key
FAWATERAK_BASE_URL=https://staging.fawaterk.com/api/v2